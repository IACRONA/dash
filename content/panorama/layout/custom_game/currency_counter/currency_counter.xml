<root>
    <scripts>
        <include src="file://{resources}/layout/custom_game/currency_counter/currency_counter.js" />
    </scripts>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.css" />
        <include src="file://{resources}/layout/custom_game/currency_counter/currency_counter.css" />
    </styles>
    <snippets>
        <snippet name="ShopWindow">
            <Panel>
                <Panel id="ShopWindowAvatar">
                    <DOTAScenePanel id="ShopWindowUnit" particleonly="false" />
                </Panel>
                <Panel id="ShopWindowBody">
                </Panel>     
            </Panel>
        </snippet>
        <snippet name="ShopItem">
            <Panel>
                <DOTAItemImage id="ShopItemImage"   /> 
                <Image id="ShopItemIcon" src="s2r://panorama/images/hud/icon_gold_psd.vtex" />
                <Label id="ShopItemLabel" class="ShopText" text="{s:gold}" /> 
            </Panel>
        </snippet>
    </snippets>
    <Panel hittest="false" class="MainHud">
        <Panel id="FlagsCounter">
                <Image id="FlagsCounterIcon" src="file://{resources}/images/custom_game/flag_counter.png" />
        </Panel>
    </Panel>
</root>
    